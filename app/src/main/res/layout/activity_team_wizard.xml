<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
            android:id="@+id/wizard_title"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:text="STEP 2: choose your team"
            android:textStyle="bold"
            />



    <RelativeLayout
            android:id="@+id/rl_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:layout_below="@+id/wizard_title"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/story_label_release"
                android:padding="2dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/story_label_release"
                android:textStyle="bold"
                android:background="@drawable/login_et_bg"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/story_release"
                android:padding="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@+id/story_release_edit"
                android:text="@string/story_release"

                android:textSize="18sp"/>

        <ImageView
                android:id="@+id/story_release_edit"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/gray_right_arrow"
                android:textSize="18sp"/>
    </RelativeLayout>


    <Button
            android:id="@+id/login"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="Next"
            android:layout_below="@id/rl_release"
            android:background="@drawable/login_btn"
            android:textColor="@android:color/white"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_user">





    </RelativeLayout>


</RelativeLayout>
